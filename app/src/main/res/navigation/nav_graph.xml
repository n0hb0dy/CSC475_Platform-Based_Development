<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.spontaneouschef.mainFragment"
        android:label="Recipe Generator"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_prefFragment"
            app:destination="@id/prefFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/prefFragment"
        android:name="com.example.spontaneouschef.prefFragment"
        android:label="Preferences"
        tools:layout="@layout/fragment_pref" >
        <action
            android:id="@+id/action_prefFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.spontaneouschef.detailsFragment"
        android:label="Recipe Details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>